<div id="pastebox">
  <button class="btn" id="demo">Add demo screenplay</button> to see how it works. <button class="btn" id="clear">Clear box</button>
  <form data-persist="garlic" action="/render" method="POST">
    <textarea name="fountain" id="fountain" placeholder="Paste your Fountain screenplay here, get back a PDF, and scram." autofocus="autofocus"></textarea>
    <label class="checkbox">
      <input type="checkbox" name="comments" value="true"> Include comments, notes, boneyards, etc
    </label>
    <button class="btn btn-smash btn-block btn-large" type="submit" id="smash">Smash Cut!</button>
  </form>
</div>
